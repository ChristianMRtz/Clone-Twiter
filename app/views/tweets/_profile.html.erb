<div class="column is-one-quarter">
	<nav class="panel">
		<p class="panel-heading">Profile</p>
		<div class="panel-block">
			<article class="media">
				<div class="media-left">
					<figure class="image is-64x64">
						<% if current_user.nil? %>
							<%= image_tag "avatar.svg", alt: "user_defect", class: "avatar-img"%>
						<% else %>
							<% if current_user.avatar.attached? %>
								<%= image_tag current_user.avatar, class: "avatar-img"%>
							<% else %>
								<%= image_tag "avatar.svg", alt: "user_defect", class: "avatar-img"%>
						<% end %>
					<% end %>
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<% if current_user.nil? %>
						<p>
							<strong>Name</strong><br />
							<small>Username</small>
						</p>
						<% else %>
						<p>
							<strong><%= current_user.name %></strong><br />
							<small><%= current_user.username %></small>
						</p>
						<% end %>
					</div>
				</div>
			</article>
		</div>
		<% if current_user.nil? %>

		<% else %>
		<div class="panel-block">
			<div class="level is-mobile">
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Tweets</p>
						<p class="title is-6"><%= current_user.tweets.count %></p>
					</div>
				</div>
			</div>
		</div>
		<% end %>
	</nav>
</div>