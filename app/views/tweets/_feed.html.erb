<div class="column is-half">
  <% if user_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-50x50">
        <% if current_user.nil? %>
        <%= image_tag "avatar.svg", alt: "user_defect", class: "avatar-img"%>
      <% else %>
        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar, class: "avatar-img"%>
        <% else %>
          <%= image_tag "avatar.svg", alt: "user_defect", class: "avatar-img"%>
        <% end %>
      <% end %>
      </p>
    </figure>
    <div class="medi-content">
      <%= render 'tweets/form' %>
    </div>
  </article>
  <% end %>

<% @tweets.each do |tweet| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image">
          <%= image_tag tweet.user.avatar, class: "avatar-img"%>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= tweet.user.name %></strong>
          <small>@<%= tweet.user.username %></small><br/>
          <p><%= tweet.body %></p>
        </div>
        <nav class="level">
  				<div class="level-left is-mobile">
            <% if user_signed_in? && current_user.id == tweet.user_id %>
            <nav class="level">
              <div class="level-right is-mobile">
                <%= link_to tweet, class: "level-item" do %>
                  <span class="icon"><i class="fa fa-comment" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to tweet, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                    <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>
</div>