<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image">
        <% if User.all.find_by(id: comment.user_id).avatar.attached? %>
        <%= image_tag User.all.find_by(id: comment.user_id).avatar, class: "avatar-img"%>
      <% else %>
        <%= image_tag "avatar.svg", alt: "user_defect", class: "avatar-img"%>
      <% end %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <strong><%= User.all.find_by(id: comment.user_id).name %></strong>
        <small>@<%= User.all.find_by(id: comment.user_id).username %></small><br/>
        <p><%= comment.body %></p>
      </div>
      <nav class="level">
				<div class="level-left is-mobile">
          <% if user_signed_in? && current_user.id == comment.user_id %>
          <nav class="level">
            <div class="level-left is-mobile">
    
              <%= link_to [comment.tweet,comment], method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              <% end %>
            </div>
          </nav>
          <% end %>
        </div>
      </nav>
    </div>
  </article>
</div>