<%= simple_form_for([@tweet, @tweet.comments.build]) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :body, label: "Tweet about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Remember to thing before write...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
